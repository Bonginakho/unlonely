<%# Partial for rendering a single chat message %>
<div class="chat-bubble-wrapper <%= chat_message.user == current_user ? 'from-me' : 'from-them' %>">
  <% unless chat_message.user == current_user %>
    <%= image_tag('Feeling Passionate.png', class: 'avatar', alt: 'avatar') %>
  <% end %>

  <div class="chat-message <%= chat_message.user == current_user ? 'from-me' : 'from-them' %>">
    <span class="bubble-tail <%= chat_message.user == current_user ? 'tail-right' : 'tail-left' %>"></span>
    <p class="chat-text"><%= chat_message.content %></p>
    <small class="chat-timestamp"><%= chat_message.created_at.strftime("%b %d, %H:%M") %></small>
  </div>

  <% if chat_message.user == current_user %>
    <%= image_tag('Feeling Passionate.png', class: 'avatar', alt: 'avatar') %>
  <% end %>
</div>

